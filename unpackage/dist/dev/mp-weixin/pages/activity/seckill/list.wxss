  border-radius: 20rpx;
}
.goods-item .big-goods .card-right {
  width: 430rpx;
  height: 220rpx;
}
.goods-item .big-goods .goods-title {
  font-size: 26rpx;
  font-weight: 600;
  width: 400rpx;
