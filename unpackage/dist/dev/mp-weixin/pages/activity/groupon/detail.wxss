.head_box {
  background: url("http://file.shopro.top/imgs/group/group_detail_bg.png") no-repeat;
  background-size: 100% 316rpx;
  padding: 60rpx 20rpx 20rpx;
}
.head_box .goods-card {
  background-color: #fff;
  border-radius: 20rpx;
}
.head_box .goods-card .group-num {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  margin-left: 30rpx;
}
.head_box .goods-card .sell-box {
  line-height: 32rpx;
  background: rgba(255, 224, 226, 0.3);
  border-radius: 16rpx;
  padding: 0 10rpx;
}
.head_box .goods-card .sell-box .hot-icon {
  font-size: 26rpx;
  color: #e1212b;
  margin-right: 8rpx;
}
.head_box .goods-card .sell-box .sell-num {
  font-size: 20rpx;
  color: #f7979c;
}
.group-box {
  background: #fff;
  padding: 40rpx 0;
  min-height: 370rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.group-box .tip-box {
  font-size: 28rpx;
  font-weight: bold;
}
.group-box .tip-box .cuIcon-roundcheckfill {
  color: #42b111;
  font-size: 34rpx;
  margin-right: 20rpx;
}
.group-box .tip-box .cuIcon-roundclosefill {
  color: #d81e06;
  font-size: 34rpx;
  margin-right: 20rpx;
}
.group-box .title-box {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
}
.group-box .title-box .group-num {
  color: #f8002c;
}
.group-box .title-box .count-down-tip {
  font-size: 24rpx;
  padding-left: 10rpx;
}
.group-box .title-box .time-box {
  font-size: 18rpx;
}
.group-box .title-box .time-box .count-text {
  display: inline-block;
  background-color: #383a46;
  color: #fff;
  font-size: 18rpx;
  border-radius: 2rpx;
  padding: 0 5rpx;
  height: 28rpx;
  text-align: center;
  line-height: 28rpx;
  margin: 0 6rpx;
}
.group-box .group-people {
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  padding: 50rpx;
}
.group-box .group-people .img-box {
  position: relative;
  margin-right: 30rpx;
}
.group-box .group-people .img-box:nth-child(6n) {
  margin-right: 0;
}
.group-box .group-people .img-box .tag {
  position: absolute;
  line-height: 36rpx;
  background: -webkit-linear-gradient(318deg, #f3dfb1, #f3dfb1, #ecbe60);
  background: linear-gradient(132deg, #f3dfb1, #f3dfb1, #ecbe60);
  border-radius: 14rpx;
  padding: 0 10rpx;
  white-space: nowrap;
  font-size: 24rpx;
  color: #784f06;
  z-index: 2;
  top: -20rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.group-box .group-people .img-box .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #ccc;
}
.group-box .group-people .img-box .leader {
  border: 4rpx solid #edc36c;
}
.group-box .btn-box {
  width: 750rpx;
}
.group-box .btn-box .btn1 {
  width: 690rpx;
  line-height: 70rpx;
  background: -webkit-linear-gradient(left, #fe832a, #ff6600);
  background: linear-gradient(90deg, #fe832a, #ff6600);
  box-shadow: 0px 7rpx 6rpx 0px rgba(255, 104, 4, 0.22);
  border-radius: 35rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: white;
}
.group-box .btn-box .btn2 {
  width: 690rpx;
  line-height: 70rpx;
  border: 1rpx solid #dfdfdf;
  border-radius: 35rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #999999;
}
.groupon-play {
  height: 94rpx;
  border-top: 1rpx solid rgba(223, 223, 223, 0.5);
  padding: 0 20rpx;
  background: #fff;
}
.groupon-play .title {
  font-size: 28rpx;
  color: #999;
}
.groupon-play .description {
  font-size: 28rpx;
  text-align: right;
}

