.head-box {
  background: url("http://file.shopro.top/imgs/user/draw_money_head_bg.png") no-repeat;
  background-size: 100% auto;
  min-height: 400rpx;
  padding-bottom: 25px;
}
.head-box .wallet-num-box {
  padding: 20rpx 40rpx 0;
}
.head-box .wallet-num-box .num-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
  margin-bottom: 20rpx;
}
.head-box .wallet-num-box .wallet-num {
  font-size: 60rpx;
  font-weight: 500;
  color: #ffffff;
}
.head-box .wallet-num-box .log-btn {
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 1rpx solid #eeeeee;
  border-radius: 30rpx;
  padding: 0;
  font-size: 26rpx;
  font-weight: 500;
  color: #ffffff;
}
.draw-card {
  background-color: #fff;
  border-radius: 20rpx;
  width: 690rpx;
  min-height: 530rpx;
  margin: -70rpx auto 0;
  padding: 30rpx;
}
.draw-card .card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
}
.draw-card .input-box {
  width: 624rpx;
  border-bottom: 1rpx solid #eee;
  height: 100rpx;
  margin-bottom: 40rpx;
}
.draw-card .input-box .unit {
  font-size: 48rpx;
  color: #333;
}
.draw-card .bank-box .name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}
.draw-card .bank-box .bank-list .empty-text {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}
.draw-card .bank-box .bank-list .sel-box .item-img {
  width: 36rpx;
  height: 36rpx;
}
.draw-card .bank-box .bank-list .sel-box .item-title {
  font-size: 28rpx;
  color: #333333;
}
.draw-card .bank-info {
  height: 50rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}
.draw-card .bank-info .bank-info-title {
  width: 500rpx;
}
.draw-card .bank-info .bind-btn {
  padding: 0 20rpx;
  line-height: 50rpx;
  background: #f5f6f8;
  border-radius: 20rpx;
  color: #999;
}
.draw-card .save-btn {
  width: 616rpx;
  height: 86rpx;
  line-height: 86rpx;
  background: -webkit-linear-gradient(right, #a36fff, #5336ff);
  background: linear-gradient(-90deg, #a36fff, #5336ff);
  box-shadow: 0px 7rpx 11rpx 2rpx rgba(124, 103, 214, 0.34);
  border-radius: 43rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #ffffff;
}
.draw-notice {
  width: 684rpx;
  height: 327rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 35rpx;
  margin: 20rpx auto;
}
.draw-notice .title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 30rpx;
}
.draw-notice .draw-list {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  margin-bottom: 10rpx;
}
.withdraw-modal {
  min-height: 600rpx;
  background-color: #fff;
}
.withdraw-modal .modal-head {
  height: 80rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.5);
}
.withdraw-modal .modal-content .type-item {
  height: 100rpx;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.5);
  width: 750rpx;
}
.withdraw-modal .modal-content .type-item .item-img {
  width: 36rpx;
  height: 36rpx;
}
.withdraw-modal .modal-content .type-item .item-title {
  font-size: 28rpx;
  color: #333333;
}
.withdraw-modal .modal-bottom {
  padding: 30rpx;
}
.withdraw-modal .modal-bottom .modal-save-btn {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: -webkit-linear-gradient(left, #a36fff, #5336ff);
  background: linear-gradient(90deg, #a36fff, #5336ff);
  box-shadow: 0 7rpx 11rpx 2rpx rgba(124, 103, 214, 0.34);
  border-radius: 40rpx;
  font-weight: 500;
  color: #ffffff;
}
.form-box .head-title {
  height: 100rpx;
  font-size: 34rpx;
  font-weight: 600;
}
.form-box .form-save-btn {
  width: 340rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: -webkit-linear-gradient(left, #a36fff, #5336ff);
  background: linear-gradient(90deg, #a36fff, #5336ff);
  box-shadow: 0 7rpx 11rpx 2rpx rgba(124, 103, 214, 0.34);
  border-radius: 40rpx;
  font-weight: 500;
  color: #ffffff;
}
.form-box .form-cancel-btn {
  width: 340rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #999;
  border-radius: 40rpx;
  font-weight: 500;
  color: #999;
}

