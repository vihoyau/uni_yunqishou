.location-item {
  font-size: 28rpx;
  font-weight: 500;
  background-color: #fff;
  color: #a76f0d;
}
.address-box {
  background-color: #fff;
  padding: 0 30rpx;
}
.address-item {
  height: 96rpx;
  background: #fff;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.5);
  padding: 0 25rpx;
}
.address-item .item-title {
  color: #333;
  font-size: 28rpx;
  white-space: nowrap;
}
.address-item .inp {
  color: #333;
  font-size: 28rpx;
}
.area-box {
  min-height: 120rpx;
  padding-bottom: 60rpx;
  background: #fff;
  padding: 30rpx 25rpx;
}
.area-box .item-title {
  font-size: 28rpx;
  line-height: 28rpx;
  vertical-align: middle;
  white-space: nowrap;
}
.area-box .area-inp {
  color: #333;
  font-size: 28rpx;
  vertical-align: middle;
  margin-top: 8rpx;
  width: 550rpx;
}
.default-box {
  height: 100rpx;
  padding: 0 25rpx;
  background: #fff;
  margin-top: 20rpx;
}
.default-box .title {
  font-size: 28rpx;
}
.default-box .switch {
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
}
.foot_box .delete-btn {
  line-height: 70rpx;
  background: -webkit-linear-gradient(357deg, #d01325, #ed3c30);
  background: linear-gradient(93deg, #d01325, #ed3c30);
  box-shadow: 0px 7rpx 6rpx 0px rgba(237, 60, 48, 0.22);
  font-size: 28rpx;
  font-weight: 500;
  color: white;
  border-radius: 35rpx;
  padding: 0;
  margin-right: 20rpx;
}
.foot_box .save-btn {
  line-height: 70rpx;
  background: -webkit-linear-gradient(left, #e9b461, #eecc89);
  background: linear-gradient(90deg, #e9b461, #eecc89);
  border: 1rpx solid #eeeeee;
  border-radius: 40rpx;
  color: rgba(255, 255, 255, 0.9);
}

