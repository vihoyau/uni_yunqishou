.empty-box {
  position: fixed;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.head_box {
  height: 114rpx;
  background-color: #fff;
  padding: 0 20rpx;
}
.head_box .type-btn {
  width: 130rpx;
  line-height: 62rpx;
  background: #eeeeee;
  border-radius: 31rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  padding: 0;
  margin-right: 10rpx;
}
.head_box .btn-active {
  background: -webkit-linear-gradient(left, #e9b461, #eecc89);
  background: linear-gradient(90deg, #e9b461, #eecc89);
  box-shadow: 0px 7rpx 6rpx 0px rgba(229, 138, 0, 0.22);
  color: #a8700d;
}
.comment-list {
  margin-top: 20rpx;
}

