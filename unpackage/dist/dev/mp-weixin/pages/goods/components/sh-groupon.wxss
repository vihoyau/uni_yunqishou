.modal-box {
  width: 750rpx;
  height: 800rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
}
.modal-box .modal-head {
  height: 92rpx;
  border-bottom: 1px solid rgba(223, 223, 223, 0.5);
  padding: 0 30rpx;
}
.modal-box .modal-head .head-title {
  font-size: 32rpx;
  font-weight: bold;
}
.modal-box .modal-content {
  padding: 0 30rpx;
}
.modal-box .modal-foot {
  font-size: 24rpx;
  font-weight: 500;
  color: #999999;
  height: 80rpx;
  border-top: 1px solid rgba(223, 223, 223, 0.5);
}
.group-people {
  background-color: #fff;
  padding: 0 20rpx;
  margin-top: 10rpx;
}
.group-people .into-title {
  height: 80rpx;
  font-size: 26rpx;
  font-weight: bold;
}
.into-item {
  height: 120rpx;
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.into-item .into-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 23rpx;
  background-color: #ccc;
}
.into-item .into-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #666666;
}
.into-item .num {
  font-size: 26rpx;
  color: #666;
}
.into-item .num .num-color {
  font-size: 24rpx;
  color: #a8700d;
}
.into-item .time {
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #999;
}
.into-item .join-btn {
  width: 140rpx;
  line-height: 60rpx;
  background: -webkit-linear-gradient(left, #fe832a, #ff6600);
  background: linear-gradient(90deg, #fe832a, #ff6600);
  box-shadow: 0px 7rpx 6rpx 0px rgba(255, 104, 4, 0.22);
  border-radius: 30rpx;
  padding: 0;
  font-size: 26rpx;
  font-weight: 500;
  color: white;
  margin-left: 40rpx;
}

