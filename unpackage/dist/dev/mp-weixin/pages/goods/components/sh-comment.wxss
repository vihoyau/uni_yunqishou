.comment-box {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}
.comment-box .head {
  margin-bottom: 20rpx;
}
.comment-box .head .avatar {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: #ccc;
}
.comment-box .head .user-name {
  font-size: 26rpx;
  color: #999;
  width: 140rpx;
  margin: 0 20rpx;
}
.comment-box .head .time {
  font-size: 24rpx;
  color: #c4c4c4;
}
.comment-box .detail {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
  line-height: 42rpx;
}
.comment-box .img-box {
  margin-top: 30rpx;
  position: relative;
}
.comment-box .img-box .nav {
  width: 670rpx;
}
.comment-box .img-box .comment-img {
  width: 160rpx;
  height: 160rpx;
  background: #ccc;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 6rpx;
}
.comment-box .img-box .comment-img:nth-child(4n) {
  margin-right: 0;
}

