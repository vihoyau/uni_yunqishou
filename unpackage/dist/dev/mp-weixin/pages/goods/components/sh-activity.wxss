.activity-box {
  background: #fff;
  padding: 30rpx 20rpx 0;
  margin: 10rpx 0;
}
.activity-box .title {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}
.activity-box .activity-content .tip-list {
  font-size: 28rpx;
  width: 100%;
  padding-bottom: 30rpx;
}
.activity-modal-box {
  width: 750rpx;
  min-height: 700rpx;
  border-radius: 30rpx 30rpx 0 0;
  background: #fff;
  padding: 30rpx;
}
.activity-modal-box .serve-btn {
  width: 690rpx;
  line-height: 80rpx;
  background: -webkit-linear-gradient(left, #f0c785, #f6d69d);
  background: linear-gradient(90deg, #f0c785, #f6d69d);
  border-radius: 40rpx;
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 40rpx;
}
.activity-modal-box .modal-head {
  margin-bottom: 30rpx;
  position: relative;
}
.activity-modal-box .modal-head .head-title {
  font-size: 32rpx;
  font-weight: bold;
}
.activity-modal-box .modal-content {
  overflow-y: auto;
}
.activity-modal-box .modal-content .tip-list {
  font-size: 28rpx;
  width: 100%;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}
.activity-modal-box .modal-content .tag-box {
  border: 1rpx solid #ff0000;
  display: inline-block;
  font-size: 20rpx;
  line-height: 30rpx;
  padding: 0 10rpx;
  color: #ff0000;
  border-radius: 8rpx;
}
.activity-modal-box .modal-content .all-goods-num {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  padding: 20rpx 0;
}

