.page_box {
  background: -webkit-linear-gradient(top, #f0c785, #f6d69d);
  background: linear-gradient(180deg, #f0c785, #f6d69d);
}
.coupon-box {
  margin: 100rpx 30rpx 0;
  border-radius: 20rpx;
  background-color: #fff;
}
.coupon-box .top {
  border-radius: 20rpx 20rpx 0 0;
  background-image: -webkit-radial-gradient(bottom left, circle, #f6d69d, #f6d69d 16rpx, transparent 17rpx), -webkit-radial-gradient(bottom right, circle, #f6d69d, #f6d69d 16rpx, transparent 17rpx);
  background-image: radial-gradient(circle at bottom left, #f6d69d, #f6d69d 16rpx, transparent 17rpx), radial-gradient(circle at bottom right, #f6d69d, #f6d69d 16rpx, transparent 17rpx);
  padding: 110rpx 0 40rpx 0;
  position: relative;
  z-index: 5;
}
.coupon-box .top .coupon-line {
  width: 95%;
  border-bottom: 2rpx dashed #f3ce90;
  position: absolute;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  z-index: 6;
}
.coupon-box .top .img-box {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #fff;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: -70rpx;
}
.coupon-box .top .img-box .coupon-img {
  width: 100rpx;
  height: 100rpx;
}
.coupon-box .top .title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 40rpx;
  margin-bottom: 30rpx;
}
.coupon-box .top .tip {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 50rpx;
}
.coupon-box .top .use-btn {
  width: 386rpx;
  line-height: 80rpx;
  background: -webkit-linear-gradient(left, #f0c785, #f6d69d);
  background: linear-gradient(90deg, #f0c785, #f6d69d);
  border-radius: 40rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 30rpx;
}
.coupon-box .top .fail-btn {
  width: 386rpx;
  line-height: 80rpx;
  background: whitesmoke;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #bcbcbc;
  margin-bottom: 30rpx;
}
.coupon-box .top .time {
  color: #999;
  font-size: 26rpx;
}
.coupon-box .bottom {
  border-radius: 0 0 20rpx 20rpx;
  background-image: -webkit-radial-gradient(top left, circle, #f6d69d, #f6d69d 16rpx, transparent 17rpx), -webkit-radial-gradient(top right, circle, #f6d69d, #f6d69d 16rpx, transparent 17rpx);
  background-image: radial-gradient(circle at top left, #f6d69d, #f6d69d 16rpx, transparent 17rpx), radial-gradient(circle at top right, #f6d69d, #f6d69d 16rpx, transparent 17rpx);
  padding: 40rpx 30rpx;
}
.coupon-box .bottom .notice-item {
  border-bottom: 1rpx solid #eeeeee;
  min-height: 90rpx;
  width: 100%;
}
.coupon-box .bottom .notice-item .notice-title {
  font-weight: 500;
  font-size: 26rpx;
}
.coupon-box .bottom .notice-item .notice-detail {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  text-indent: 30rpx;
}
.coupon-goods .coupon-goods-title {
  font-size: 30rpx;
  font-weight: bold;
  height: 80rpx;
}
.coupon-goods .goods-list {
  background: #fff;
  border-radius: 20rpx;
}

