.order-detail-wrap {
  height: 100%;
}
.order-detail-wrap .bottom-hack {
  width: 750rpx;
  height: 100rpx;
}
.order-detail-wrap .bottom-box {
  position: fixed;
  width: 750rpx;
  height: 100rpx;
  bottom: 0;
  left: 0;
  background-color: #fff;
  padding: 10rpx 0;
}
.order-detail-wrap .bottom-box .send-btn {
  width: 710rpx;
  height: 80rpx;
  background: -webkit-linear-gradient(left, #2eae9c, #6cc29f);
  background: linear-gradient(90deg, #2eae9c, #6cc29f);
  border: 1rpx solid #ededed;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: white;
}
.card-box {
  margin-bottom: 20rpx;
  background-color: #fff;
}
.card-box .order-goods-item {
  padding: 20rpx;
}
.card-box .order-goods-item .card-item {
  line-height: 60rpx;
}
.card-box .order-goods-item .card-item .item-title {
  font-size: 28rpx;
  color: #999;
}
.card-box .order-goods-item .card-item .item-content {
  font-size: 26rpx;
  color: #333;
}
.card-box .order-sku {
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  width: 450rpx;
  margin-bottom: 20rpx;
}
.card-box .order-sku .order-num {
  margin-right: 10rpx;
}
.card-box .card-price-box .status-btn {
  height: 32rpx;
  border: 1rpx solid #cfa972;
  border-radius: 15rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #a8700d;
  padding: 0 10rpx;
  margin-left: 20rpx;
  background: rgba(233, 183, 102, 0.16);
}
.card-box .card-price-box .order-price {
  font-size: 26rpx;
  font-weight: 600;
  color: #333333;
}
.order-detail-card {
  background-color: #fff;
  margin: 20rpx 0;
}
.order-detail-card .card-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  height: 80rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.5);
}
.order-detail-card .detial-content {
  padding: 20rpx;
}
.order-detail-card .detial-content .detail-item {
  min-height: 60rpx;
}
.order-detail-card .detial-content .detail-item .item-title {
  font-size: 28rpx;
  color: #999;
}
.order-detail-card .detial-content .detail-item .item-content {
  font-size: 26rpx;
  color: #333;
}
.order-detail-card .detial-content .address-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.order-detail-card .detial-content .address-item .address-content {
  width: 550rpx;
}

