<view class="page_box store-list-wrap"><view class="head_box"></view><view class="content_box"><block wx:for="{{storeList}}" wx:for-item="store" wx:for-index="__i0__" wx:key="id"><label data-event-opts="{{[['tap',[['selStore',['$0'],[[['storeList','id',store.id,'id']]]]]]]}}" bindtap="__e"><view class="store-item u-flex u-row-between"><view class="u-flex u-col-center"><view class="img-box"><image class="store-img" src="{{store.image_first}}" mode="aspectFill" lazy-load="{{true}}"></image></view><view class="item-left u-flex-col u-row-left"><text class="store-title">{{store.name}}</text><text class="store-content">{{store.city_name+store.area_name+store.address}}</text></view></view><radio class="{{['orange',(storeId==store.id)?'checked':'']}}" style="transform:scale(0.7);" checked="{{storeId==store.id}}"></radio></view></label></block></view><view class="foot_box u-flex u-row-between u-col-center"><button data-event-opts="{{[['tap',[['saveStore',['$event']]]]]}}" class="u-reset-button save-btn" bindtap="__e">чбошод</button></view></view>