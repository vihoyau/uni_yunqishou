.store-item {
  padding: 0 30rpx;
  height: 180rpx;
  background-color: #fff;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.6);
  width: 100%;
}
.store-item .img-box {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.store-item .img-box .store-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.store-item .store-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #343434;
  margin-bottom: 10rpx;
}
.store-item .store-content {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
}
.foot_box {
  height: 100rpx;
  background: white;
  padding: 0 20rpx;
}
.foot_box .save-btn {
  width: 710rpx;
  line-height: 80rpx;
  background: -webkit-linear-gradient(left, #2eae9c, #6cc29f);
  background: linear-gradient(90deg, #2eae9c, #6cc29f);
  border: 1rpx solid #eeeeee;
  font-size: 30rpx;
  font-weight: 500;
  color: white;
  padding: 0;
  border-radius: 40rpx;
}

