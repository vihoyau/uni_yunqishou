page {
  background-color: #fff;
}
.goods-list {
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(223, 223, 223, 0.5);
  position: relative;
}
.goods-list .share-btn {
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  width: 160rpx;
  line-height: 60rpx;
  background: -webkit-linear-gradient(left, #a36fff, #5336ff);
  background: linear-gradient(90deg, #a36fff, #5336ff);
  box-shadow: 0px 7rpx 11rpx 2rpx rgba(124, 103, 214, 0.34);
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}
.goods-list .img-box {
  border: 1rpx solid rgba(223, 223, 223, 0.43);
  margin-right: 30rpx;
}
.goods-list .img-box .goods-img {
  width: 200rpx;
  height: 200rpx;
}
.goods-list .goods-info {
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
          align-items: flex-start;
  height: 200rpx;
}
.goods-list .goods-info .goods-title {
  width: 400rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 10rpx;
}
.goods-list .goods-info .goods-des {
  width: 400rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #a8700d;
  margin-bottom: 10rpx;
}
.goods-list .goods-info .goods-price {
  margin-bottom: 10rpx;
}
.goods-list .goods-info .goods-price .price {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-right: 16rpx;
}
.goods-list .goods-info .goods-price .origin-price {
  font-size: 24rpx;
  font-weight: 400;
  text-decoration: line-through;
  color: #999999;
}
.goods-list .goods-info .commission-num {
  font-size: 24rpx;
  font-weight: 500;
  color: #5e4ddf;
}

