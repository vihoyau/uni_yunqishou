  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.order-nav .nav-item .item-title {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 76rpx;
}
.order-nav .nav-item .nav-line {
  width: 100rpx;
  height: 4rpx;
  background: #fff;
}
