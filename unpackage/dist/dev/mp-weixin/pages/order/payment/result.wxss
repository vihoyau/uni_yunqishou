.success-box {
  background: #fff;
  width: 750rpx;
  padding: 40rpx 0;
}
.success-box .pay-img {
  width: 130rpx;
  height: 130rpx;
}
.success-box .notice {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  line-height: 30rpx;
  margin-top: 30rpx;
}
.success-box .pay-money {
  font-size: 36rpx;
  color: #ff3000;
  font-weight: 600;
  margin-top: 20rpx;
}
.success-box .btn-box {
  margin-top: 30rpx;
  width: 660rpx;
}
.success-box .btn-box .base-btn {
  width: 320rpx;
  line-height: 70rpx;
  background: white;
  border: 1rpx solid rgba(223, 223, 223, 0.5);
  border-radius: 35rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  padding: 0;
}
.success-box .btn-box .again-pay {
  width: 320rpx;
  line-height: 70rpx;
  background: -webkit-linear-gradient(left, #e9b461, #eecc89);
  background: linear-gradient(90deg, #e9b461, #eecc89);
  box-shadow: 0px 7rpx 6rpx 0px rgba(229, 138, 0, 0.22);
  border-radius: 35rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.8);
  padding: 0;
}
.hot-box {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
.hot-box .hot-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  height: 80rpx;
}

