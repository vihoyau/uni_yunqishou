.shopro-float-btn {
  position: fixed;
  bottom: calc(0px + 100rpx);
  right: 30rpx;
  z-index: 10002;
}
.shopro-float-btn .float--active {
  position: absolute;
  bottom: 80rpx;
  right: 0;
  left: 0;
  margin: 0 auto;
  z-index: 10010;
  -webkit-transform: scale(1);
          transform: scale(1);
  -webkit-transition: all 0.2s linear;
  transition: all 0.2s linear;
}
.shopro-float-btn .float-list-box {
  position: absolute;
  z-index: 10010;
  bottom: 0;
  right: 0;
  left: 0;
  margin: 0 auto;
  -webkit-transform: scale(0);
          transform: scale(0);
  -webkit-transform-origin: bottom;
          transform-origin: bottom;
  opacity: 0;
  -webkit-transition: all 0.2s linear;
  transition: all 0.2s linear;
}
