@charset "UTF-8";
/**
 * 下方引入的为uView UI的集成样式文件，为scss预处理器，其中包含了一些"u-"开头的自定义变量
 * 使用的时候，请将下面的一行复制到您的uniapp项目根目录的uni.scss中即可
 * uView自定义的css类名和scss变量，均以"u-"开头，不会造成冲突，请放心使用 
 */
.goods-box {
  position: relative;
}
.goods-box .goods__tag {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}
.goods-box .goods__tag .tag-img {
  width: 60rpx;
}
.goods-box .goods-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  width: 450rpx;
  line-height: 40rpx;
}
.goods-box .describe-text {
  font-size: 24rpx;
  width: 450rpx;
  color: #a8700d;
}
.goods-box .price {
  color: #fa3534;
  font-weight: 600;
}
.goods-box .price::before {
  content: '￥';
  font-size: 20rpx;
}
.goods-box .origin-price {
  color: #c8c9cc;
  font-size: 24rpx;
  text-decoration: line-through;
}
.goods-box .origin-price::before {
  content: '￥';
  font-size: 20rpx;
}

